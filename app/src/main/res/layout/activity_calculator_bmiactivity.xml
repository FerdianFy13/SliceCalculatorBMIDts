<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CalculatorBMIActivity">

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="40sp"
        android:text="BMI Calculator"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/pilihGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="100sp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/pilihMale"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/radio_flat_selector"
            android:button="@color/colorPrimaryDark"
            android:checked="false"
            android:gravity="center"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingTop="10dp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingBottom="50dp"
            android:text="Male"
            android:textStyle="bold"
            android:textColor="@color/colorWhite" />

        <RadioButton
            android:id="@+id/pilihFemale"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_flat_selector"
            android:button="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_weight="1"
            android:checked="true"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="50dp"
            android:text="Female"
            android:textColor="@color/colorWhite"
            />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearTinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/pilihGender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/textTinggi"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="cm"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/inputTinggi"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            android:textStyle="normal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/radio_flat_regular"
            android:gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBerat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/linearTinggi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/textBerat"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="kg"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/inputBerat"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            android:textStyle="normal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/radio_flat_regular"
            android:gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/linearBerat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textGoal"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="goal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/inputGoal"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            android:textStyle="normal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/radio_flat_regular"
            android:gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/linearGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/textUmur"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="umur"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/inputUmur"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            android:textStyle="normal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/radio_flat_regular"
            android:gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="calculateBMI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearAge"
        app:layout_constraintVertical_bias="0.40"
        app:srcCompat="@drawable/calculate_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>